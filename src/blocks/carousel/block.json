{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "vguate/carousel",
    "version": "0.1.0",
    "title": "Carrusel de Imágenes",
    "category": "vguate-blocks",
    "icon": "format-gallery",
    "description": "Carrusel con 5 imágenes que muestra 3 columnas a la vez con botones de navegación.",
    "textdomain": "vguate",
    "supports": {
        "html": false,
        "align": ["wide", "full"]
    },
    "attributes": {
        "images": {
            "type": "array",
            "default": [null, null, null],
            "items": {
                "type": "object"
            }
        },
        "autoSelect": {
            "type": "boolean",
            "default": false
        }
    },
    "editorScript": "file:./index.js",
    "editorStyle": "file:./editor.css",
    "style": "file:./style.css",
    "viewScript": "file:./view.js",
    "render": "file:./render.php"
}
